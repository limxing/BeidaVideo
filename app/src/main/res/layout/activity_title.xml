<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bac"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bac"
    android:orientation="vertical">

    <View
        android:id="@+id/title_topview"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:src="@drawable/back" />
        <ImageView
            android:id="@+id/title_close"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/title_back"
            android:paddingRight="10dp"
            android:src="@drawable/close"/>

        <TextView

            android:id="@+id/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
           android:layout_toRightOf="@+id/title_close"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_name"
            android:paddingRight="20dp"
            android:textColor="#fff"
            android:layout_toLeftOf="@+id/title_right_image"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/title_right_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:src="@drawable/download"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:text="添加"
            android:textColor="#fff"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>