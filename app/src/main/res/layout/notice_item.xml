<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/notice_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-05-18"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/notice_item_bac"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/notice_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/notice_item_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="描述"
                android:textColor="#aaa"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/notice_item_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:paddingRight="20dp"
        android:src="@drawable/notice_item_read" />
</RelativeLayout>